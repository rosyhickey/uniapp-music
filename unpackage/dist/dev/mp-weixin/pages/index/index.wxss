.box {
  position: relative;
  height: 800px;
  background-color: #CCFF99;
  background-size: 100%;
}
.box .top {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}
.box .top .log {
  margin-left: 20rpx;
  width: 260rpx;
  height: 50rpx;
  display: flex;
}
.box .top .log .logtext {
  font-size: 25rpx;
  padding-left: 8rpx;
  color: #000000;
  text-align: center;
  line-height: 50rpx;
}
.box .top .date {
  width: 240rpx;
  height: 50rpx;
  margin-right: 20rpx;
  display: flex;
}
.box .top .date .logdate {
  font-size: 25rpx;
  padding-left: 8rpx;
  color: #000000;
  text-align: center;
  line-height: 50rpx;
}
.box .wenhou {
  height: 220rpx;
  position: relative;
}
.box .wenhou .wenhoubox {
  position: absolute;
  top: 50rpx;
  width: 500rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 125rpx;
  margin-bottom: 25rpx;
  border: 2rpx solid #000000;
  border-radius: 50rpx;
}
.box .wenhou .wenhoubox .wenhoutext {
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  font-family: cursive;
}
.box .musiclove {
  position: relative;
  height: 200rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx 40rpx 25rpx;
}
.box .musiclove .one, .box .musiclove .two, .box .musiclove .three {
  background-color: skyblue;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
}
.box .musiclove .one .musictitle, .box .musiclove .two .musictitle, .box .musiclove .three .musictitle {
  position: absolute;
  height: 10rpx;
  bottom: 25rpx;
  text-decoration: underline;
}
.box .wishbox {
  padding-top: 50rpx;
  width: 500rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 125rpx;
}
.box .wishbox .wishtext {
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  font-family: cursive;
}
.box .erweima {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}
.box .btnbox {
  width: 200rpx;
  margin-left: 275rpx;
}
.box .btnbox .btn {
  width: 200rpx;
  border-radius: 10px;
  border: 1px solid black;
  text-align: center;
  background: rgba(255, 251, 240, 0.3);
}
.box .fenge {
  width: 500rpx;
  margin: 0 auto;
}

