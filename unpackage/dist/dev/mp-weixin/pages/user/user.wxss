.box {
  width: 100%;
  height: 800px;
  background-image: url(https://1317036699.vod2.myqcloud.com/e9e53236vodsh1317036699/346ef0f4243791580094177741/ZXgYu8JYAIIA.png);
  background-size: 100%;
}
.top {
  height: 220rpx;
  position: relative;
}
.top .touxiang {
  text-align: center;
}
.top .touxiang ._img {
  border-radius: 100rpx;
}
.top .username {
  position: absolute;
  left: 30%;
  width: 300rpx;
  height: 60rpx;
  font-size: 20px;
  background-color: #dbd2c0;
  text-align: center;
  border: 1rpx solid #000000;
  border-radius: 40rpx;
}
.main {
  height: 360px;
}
.example-body {
  padding: 10px;
}
.scroll-view {
  width: 100%;
  height: 100%;
  flex: 1;
}
.scroll-view-box {
  flex: 1;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
.info {
  padding: 15px;
  color: #666;
}
.info-text {
  font-size: 14px;
  color: #666;
}
.info-content {
  padding: 5px 15px;
}
.close {
  padding: 10px;
}
.bottom {
  width: 500rpx;
  height: 60px;
  line-height: 60px;
  position: absolute;
  margin-top: 100px;
  text-align: center;
  left: 16%;
}
.exitbtn {
  width: 200rpx;
  height: 100rpx;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 251, 240, 0.3);
  border: 1px solid #cc4444;
}

